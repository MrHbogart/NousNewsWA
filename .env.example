# NousNews environment template
# Copy this file into each service folder before running:
#   cp .env.example backend/.env
#   cp .env.example frontend/.env

# Backend (Django)
DJANGO_SECRET_KEY=set-your-django-secret
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=127.0.0.1,0.0.0.0,localhost
DJANGO_TIME_ZONE=UTC

DJANGO_DB_NAME=nousnews_backend
DJANGO_DB_USER=nousnews_backend
DJANGO_DB_PASSWORD=set-your-db-password
DJANGO_DB_HOST=127.0.0.1
DJANGO_DB_PORT=5432
DJANGO_DB_ENGINE=django.db.backends.postgresql

POSTGRES_DB=nousnews_backend
POSTGRES_USER=nousnews_backend
POSTGRES_PASSWORD=set-your-db-password

DJANGO_CORS_ALLOWED_ORIGINS=http://127.0.0.1:3001
DJANGO_CSRF_TRUSTED_ORIGINS=http://127.0.0.1:3001

# Optional: create a Django superuser on container start
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=change-me

# Frontend (Nuxt)
NUXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8081/api
NUXT_PUBLIC_SITE_DOMAIN=http://127.0.0.1:3001
